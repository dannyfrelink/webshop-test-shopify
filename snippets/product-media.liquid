{% case media.media_type %}
    {% when "image" %}
        <img class="w-full h-full object-cover" height="500" width="500" src="{{ media | image_url: height: 500, width: 500 }}" alt="{{ media.preview_image.alt }}">
    {% when "external_video" %}
        {{ media | external_video_tag: class: "w-full h-80 object-cover" }}
    {% when "video" %}
        {{ media | video_tag: controls: true, class: "w-full h-80 object-cover" }}
    {% when "model" %}
        {{ media | model_viewer_tag }}
    {% else %}
        {{ media | media_tag }}
    {% endcase %}